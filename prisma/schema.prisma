generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model EscapeRoomConfig {
  id           Int                  @id @default(autoincrement())
  timerMinutes Int
  hotspots     EscapeRoomHotspot[]  
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
}

model EscapeRoomHotspot {
  id        Int                @id @default(autoincrement())
  x         Float
  y         Float
  question  String
  answer    String
  configId  Int
  config    EscapeRoomConfig   @relation(fields: [configId], references: [id])
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
}
