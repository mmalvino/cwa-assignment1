generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model EscapeRoom {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  title           String
  description     String?
  backgroundImage String   @default("/escape-room-bg.jpg")
  timerSeconds    Int      @default(60)

  hotspots Hotspot[] @relation("RoomHotspots")
}

model Hotspot {
  id         String     @id @default(cuid())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  x          Float
  y          Float
  question   String
  answer     String
  roomId     String
  escapeRoom EscapeRoom @relation("RoomHotspots", fields: [roomId], references: [id])
}
